# Domain and networking
DOMAIN=your-domain.ru
API_PORT=4000
NODE_ENV=production

# Postgres
POSTGRES_DB=ticketing
POSTGRES_USER=ticketing
POSTGRES_PASSWORD=strongpassword
DATABASE_URL=postgresql://ticketing:strongpassword@postgres:5432/ticketing

# Redis
REDIS_URL=redis://redis:6379

# YooKassa
YOOKASSA_SHOP_ID=your-shop-id
YOOKASSA_SECRET_KEY=your-secret-key
YOOKASSA_WEBHOOK_SECRET=your-webhook-secret
YOOKASSA_RETURN_URL=https://your-domain.ru/payment/success

# Next.js public API endpoint
NEXT_PUBLIC_API_URL=https://your-domain.ru/api

# Certbot
CERTBOT_EMAIL=admin@your-domain.ru

# Backup
KEEP_DAYS=14
