{
  "name": "ticketing-monorepo",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  "remoteUser": "node",
  "workspaceFolder": "/workspaces/100",
  "postCreateCommand": "npm install --workspaces --include-workspace-root=false",
  "postStartCommand": "bash ops/auto-up.sh",
  "customizations": {
    "vscode": {
      "settings": {
        "npm.exclude": ["**/node_modules/**"],
        "files.trimTrailingWhitespace": true
      },
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  }
}
